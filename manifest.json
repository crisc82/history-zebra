{
  "manifest_version": 2,
  "name": "History Whitelist",
  "version": "0.1.0",
  "description": "Given a list of domains, treats them as a whitelist or a blacklist for the browser history.",
  "homepage_url": "https://github.com/kafene/history-whitelist-webextension",
  "applications": {
    "gecko": {
      "id": "history-whitelist@kafene.org"
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "history",
    "storage"
  ]
}
